<?xml version="1.0" encoding="UTF-8"?>
<installation version="1.0">
    <info>
        <appname>Interedition Server</appname>
        <appversion>1.0</appversion>

        <javaversion>1.6</javaversion>
    </info>
    <guiprefs resizable="no" width="800" height="600" />
    <locale>
        <langpack iso3="eng" />
    </locale>
    <resources>
        <res id="Installer.image" src="style/eu/interedition/style/interedition_logo.png" />
    </resources>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <packs>
        <pack name="Interedition Server" required="yes">
            <description>Interedition Server</description>
            <fileset dir="." targetdir="$INSTALL_PATH" excludes="style/**" />
            <executable targetfile="$INSTALL_PATH/bin/server" stage="never">
                <os family="unix"/>
            </executable>
        </pack>
    </packs>
</installation>